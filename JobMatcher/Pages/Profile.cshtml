@page
@model ProfileModel

<div class="container mt-5">
    <h2 class="mb-4">Your Profile</h2>

    <div class="card shadow-sm">
        <div class="card-body">

            <form id="profileForm">
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input id="fullName" class="form-control" type="text">
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input id="email" class="form-control" type="email">
                </div>

                <div class="mb-3">
                    <label class="form-label">Your Skills</label>
                    <textarea id="skills" class="form-control" rows="4" placeholder="Example: Java, C#, Networking, SOC Analyst, HTML, Python"></textarea>
                </div>

                <button type="button" id="saveBtn" class="btn btn-primary">
                    Save Profile
                </button>
            </form>

        </div>
    </div>

    <div class="alert alert-success mt-3 d-none" id="savedAlert">
        Profile saved.
    </div>
</div>

<script>
    function loadProfile() {
        document.getElementById("fullName").value = localStorage.getItem("profile_fullName") || "";
        document.getElementById("email").value = localStorage.getItem("profile_email") || "";
        document.getElementById("skills").value = localStorage.getItem("profile_skills") || "";
    }

    function saveProfile() {
        localStorage.setItem("profile_fullName", document.getElementById("fullName").value);
        localStorage.setItem("profile_email", document.getElementById("email").value);
        localStorage.setItem("profile_skills", document.getElementById("skills").value);

        let alertBox = document.getElementById("savedAlert");
        alertBox.classList.remove("d-none");
        setTimeout(() => alertBox.classList.add("d-none"), 2000);
    }

    document.getElementById("saveBtn").addEventListener("click", saveProfile);

    loadProfile();
</script>
